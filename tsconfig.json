{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": ["src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"jsx": "preserve",
		"preserveValueImports": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"target": "ESNext",
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": []
	},
	"references": [
		{
			"path": "./tsconfig.config.json"
		}
	]
}
